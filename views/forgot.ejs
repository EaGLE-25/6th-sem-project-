<title>Forgot Password</title>
</head>
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <form action="/forgot" method="POST" class="forgotform">
                <h4 class="plansH">Reset Password</h4>
                <hr  class="mb-5">
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" name="email" autofocus class="form-control">
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-danger" value="Reset Password">
                </div>
            </form>
        </div>
    </div>
    
</div>

