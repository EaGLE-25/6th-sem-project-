<html>

<head>
  <title>Home</title>
  <link rel="stylesheet" type="text/css" href="/stylesheets/lib/bootstrap-4.4.1-dist/css/bootstrap.css">
  <link rel="stylesheet" type="text/css" href="/stylesheets/Home.css">
  <link rel="stylesheet" type="text/css" href="/stylesheets/lib/fontawesome-free-5.13.0-web/css/all.min.css">
  <link href="https://fonts.googleapis.com/css?family=Poppins:400,600,700&display=swap" rel="stylesheet"> 
  <link href="https://fonts.googleapis.com/css2?family=Baloo+2:wght@700&display=swap" rel="stylesheet">
  <script defer src="/scripts/lib/jquery-3.4.1.min.js" crossorigin="anonymous"></script>
  <script defer src="/stylesheets/lib/bootstrap-4.4.1-dist/js/bootstrap.min.js" crossorigin="anonymous"></script>
  <script defer src="/scripts/lib/ejs.min.js"></script>
  <script defer type="text/javascript" src="/scripts/main.js"></script> 
</head>

<body>
  <nav id="mainNavbar" class="navbar navbar sticky-top navbar-expand-lg navbar-light px-5 ">
    <a class="navbar-brand" href="/home"><img src="/images/Capture.jpg"></a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
      aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item">
          <a class="nav-link" href="/new-connection/new">New connection</a>
        </li>
        <% if(currentUser){ %>
            <% if(currentUser.isConUser==true){ %>
              <li class="nav-item">
              <a class="nav-link" href="/support/new">Support</a>
              </li>
           <% } %>
        <% } %>
      </ul>
      <% if(!currentUser){ %>
        <a href="/login" class="btn btn-outline-danger btn-sm "><i class="fas fa-user"></i> Login</a>
        <a href="/register" class="btn btn-outline-danger btn-sm ml-2 "><i class="fas fa-user-plus"></i> Sign Up</a>
      <% }else{ %>
        <ul class="navbar-nav">
            <% if(currentUser.isConUser==true){ %>
              <li class="nav-item">
                <a class="nav-link" href="/user/<%= currentUser._id %>">Logged in as <%= currentUser.username %></a>
              </li>
          <%  }else{ %>
            <li class="nav-item">
              <a class="nav-link" href="">Logged in as <%= currentUser.username %></a>
            </li>
          <% } %>
        </ul>
        <a href="/logout" class="btn btn-outline-danger btn-sm ml-2 "><i class="fas fa-sign-out-alt mr-2"></i>Logout</a>
      <% } %>
    </div>
  </nav>