<%- include("../partials/header.ejs"); %>

<h4 class="text-center plansH">New connection Requests</h4>
<hr id="hr">

<div class="container">
    <div class="row">
		<div class="col-md-3 mt-5">
			<div class="list-group">
				<li class="list-group-item active" id="personalinfo"> Personal Info </li>
            </div>
            <div id="map"></div>
        </div>
        <div class="col-md-9 inputs">
            <form action="/admin/request/new-connection" method="POST"  style="width:50rem;height:70vh" > 
                <div class="form-group">
                    <label class="ml-4">Name</label>
                    <input  class="form-control"type="text"  value="<%= newcon.name %>">
                </div>
                <div class="form-group">
                    <label class="ml-4">Phone</label>
                    <input class="form-control" type="text"  value="<%= newcon.phone %>">
                </div>
                <div class="form-group">
                     <label class="ml-4">Plan</label>
                      <input class="form-control" type="text"  value="<%= newcon.plan %>">
                </div>
                <div class="form-group">
                    <label class="ml-4">Address</label>
                    <input class="form-control" type="text" value="<%= newcon.address %>">
                </div>
                <div class="form-group">
                  <label class="ml-4">Locality</label>
                  <input class="form-control" type="text"  value="<%= newcon.locality %>">
              </div>
                <div>
                    <label class="ml-4">E-mail address</label>
                    <input class="form-control" type="text"  value="<%= newcon.email %>">
                </div> 
                <div class="AceeptDeclineBTN">
                    <a href="" class="btn btn-outline-danger mr-2" >Decline</a>
                    <a href="" class="btn btn-outline-success" >Accept</a>
                </div>
                </form>
        </div>
</div>
<script>
    function initMap() {
      var latstring = "<%= newcon.lat %>"
      var lngstring = "<%= newcon.lng %>";
      var lat=parseFloat(latstring);
      var lng=parseFloat(lngstring);
      var center = {lat: lat, lng: lng };
      var map = new google.maps.Map(document.getElementById("map"), {
          zoom: 16,
          center: center,
          scrollwheel: false
      });
      var contentString = `
        <strong><%= newcon.name %><br/>
        <%= newcon.location %></strong>
      `
      var infowindow = new google.maps.InfoWindow({
        content: contentString
      });
      var marker = new google.maps.Marker({
          position: center,
          map: map
      });
      marker.addListener('click', function() {
        infowindow.open(map, marker);
      });
    }
  </script>
  <script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyD27OCfERJWk0dd1ziqQ05mu0eHdvuickI&callback=initMap"></script>
