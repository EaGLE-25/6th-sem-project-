<%- include("../partials/adminheader.ejs"); %>


<h4 class="plansD">
    Dashboard
</h4>
<hr id="hr1">

<div class="container dashcontainer">
<div class="row">
    <div class="col-md-3 mr-5">
     <div class="card dashcard">
         <div class="card-title px-3 pt-4" style="color: #ea1c2c;">
           <h4><i class="fas fa-clipboard mr-3"></i>Support tickets</h4>
         </div>
         <div class="card-body">
             Number of tickets
             <div>
                 <h4><%= supportcount %></h4>
                 <div class="dashsvg ml-5">
                    <%- include("../partials/dashsupportsvg.ejs"); %>
                 </div>
             </div>
             <a href="/admin/support" class="stretched-link"></a>
         </div>
     </div>
    </div>
    <div class="col-md-3 mr-5">
        <div class="card dashcard">
            <div class="card-title px-3 pt-4" style="color: #ea1c2c;">
              <h4><i class="fas fa-wifi mr-3"></i>Connection requests</h4>
            </div>
            <div class="card-body">
                Number of new connection requests
                <div>
                    <h4><%= concount %></h4>
                    <div class="dashsvg ml-5">
                        <%- include("../partials/dashconsvg.ejs"); %>
                     </div>
                </div>
                <a href="/admin/request/new-connection" class="stretched-link"></a>
            </div>
        </div>
       </div>
       <div class="col-md-3 mr-5">
        <div class="card dashcard">
            <div class="card-title px-3 pt-4" style="color: #ea1c2c;">
              <h4><i class="fas fa-users mr-3"></i>Customers</h4>
            </div>
            <div class="card-body">
                Number of active connection users
                <div>
                    <h4><%= userscount %></h4>
                    <div class="dashsvg ml-5">
                        <%- include("../partials/dashusersvg.ejs"); %>
                     </div>
                </div>
                <a href="/users" class="stretched-link"></a>
            </div>
        </div>
       </div>
</div>
</div>
 
 
<%- include("../partials/footer.ejs"); %>