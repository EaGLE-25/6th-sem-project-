<html>

<head>
  <title>Home</title>
  <link rel="stylesheet" type="text/css" href="/stylesheets/lib/bootstrap-4.4.1-dist/css/bootstrap.css">
  <link rel="stylesheet" type="text/css" href="/stylesheets/Home.css">
  <link rel="stylesheet" type="text/css" href="/stylesheets/lib/fontawesome-free-5.13.0-web/css/all.min.css">
  <link href="https://fonts.googleapis.com/css?family=Poppins:400,600,700&display=swap" rel="stylesheet"> 
  <link href="https://fonts.googleapis.com/css2?family=Baloo+2:wght@700&display=swap" rel="stylesheet"> 
</head>

<body>
  <div class="container" style="margin-top: 10rem;">
  <div class="row justify-content-center">
      <form action="/admin" method="POST" class="realoginform col-md-10" >
          <h4 class="plansH text-center mb-3">Admin Login</h4>
          <div class="form-group col-md-12">
              <input class="form-control admin-username" type="text" name="admin-username" placeholder="Username" autocomplete="off">
          </div>
          <div class="form-group col-md-12">
              <input class="form-control admin-password" type="password" name="password" placeholder="Password">
          </div>
          <div class="form-group col-md-12">
              <input type="submit" class="btn btn-outline-danger btn-block admin-login" value="Login"></button>
          </div>
      </form>
  </div>
</div>

<div class="modal fade" id="admin-invalid-login" data-backdrop="static">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Invalid Credentials</h5>
      </div>
      <div class="modal-body">
      <div>
        Enter proper login details.
      </div>
    </div>
      <div class="modal-footer">
        <input type="button" class="btn btn-outline-danger" data-dismiss="modal" value="OK">
      </div>
    </div>
  </div>
</div>




<%- include("../partials/footer.ejs"); %>

<script>
  const loginButton = document.querySelector(".admin-login");
  const userName = document.querySelector(".admin-username");
  const password = document.querySelector(".admin-password");


  
  loginButton.addEventListener("click",(e)=>{
    e.preventDefault();
    const usernameValue = userName.value;
    const passwordValue = password.value;

    if(usernameValue==="admin" && passwordValue==="Test@123"){
      window.location = "/admin";
    }else{
       $("#admin-invalid-login").modal("show");
    }
  })
</script>